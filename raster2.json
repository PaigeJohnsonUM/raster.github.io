{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "For Assignment 3. Temperature taken daily and averaged over the month of August 2017 pitted against fires in the same month.",
  "width": 600,
  "height": 300,
  "autosize": "fit-x",
  "title": {
    "offset": 0,
    "text": "Ocean Surface Salinity May 2015",
    "fontSize": 18
  },
  "signals": [
    {
      "name": "projection",
      "value": "naturalEarth1"
    },
    {
      "name": "scale",
      "value": 110,
      "bind": {
        "input": "range",
        "min": 50,
        "max": 400,
        "step": 5
      }
    },
    {
      "name": "rotate",
      "value": 0,
      "bind": {
        "input": "range",
        "min": -180,
        "max": 180,
        "step": 1
      }
    },
    {
      "name": "opacity",
      "value": 0.5,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1,
        "step": 0.01
      }
    },
    {
      "name": "levels",
      "value": 6,
      "bind": {
        "input": "range",
        "min": 2,
        "max": 12,
        "step": 1
      }
    },
    {
      "name": "stop",
      "value": 40
    },
    {
      "name": "step",
      "update": "stop / levels"
    }
  ],
  "data": [
    {
      "name": "temp",
      "url": "data1.json"
    },
    {
      "name": "contours",
      "source": "temp",
      "transform": [
        {
          "type": "isocontour",
          "thresholds": {
            "signal": "sequence(25, stop, 1)"
          }
        }
      ]
    },
    {
      "name": "world",
      "url": "world.json",
      "format": {
        "type": "topojson",
        "feature": "countries"
      }
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": {
        "signal": "projection"
      },
      "scale": {
        "signal": "scale"
      },
      "rotate": {
        "signal": "[rotate]"
      },
      "translate": {
        "signal": "[width/2, height/2]"
      }
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "quantize",
      "domain": {
        "signal": "[25, stop]"
      },
      "range": {
        "scheme": "viridis",
        "count": {
          "signal": "levels"
        }
      }
    }
  ],
  "marks": [
    {
      "type": "shape",
      "clip": true,
      "from": {
        "data": "world"
      },
      "encode": {
        "update": {
          "strokeWidth": {
            "value": 1
          },
          "stroke": {
            "value": "#eee"
          },
          "fill": {
            "value": "#ddd"
          }
        }
      },
      "transform": [
        {
          "type": "geoshape",
          "projection": "projection"
        }
      ]
    },
    {
      "type": "shape",
      "clip": true,
      "from": {
        "data": "contours"
      },
      "encode": {
        "update": {
          "fill": {
            "scale": "color",
            "field": "contour.value"
          },
          "fillOpacity": {
            "signal": "opacity"
          }
        }
      },
      "transform": [
        {
          "type": "geoshape",
          "field": "datum.contour",
          "projection": "projection"
        }
      ]
    }
  ],
  "legends": [
    {
      "title": "Temperature (C)",
      "fill": "color",
      "orient": "bottom",
      "offset": 5,
      "type": "gradient",
      "gradientLength": 300,
      "gradientThickness": 12,
      "titlePadding": 10,
      "titleOrient": "left",
      "titleAnchor": "end",
      "direction": "horizontal"
    }
  ],
  "config": {
    "legend": {
      "layout": {
        "anchor": "middle"
      }
    }
  }
}